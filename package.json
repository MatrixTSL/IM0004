{
  "name": "matrix-plc-interface",
  "version": "0.5.2",
  "description": "HMI interface for Matrix Closed Loop Maintenance Product with PDF Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "electron run-pdf-tests.js",
    "test:pdf": "electron pdf-viewer-test.js",
    "build": "electron-builder",
    "build-and-publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.matrix.plc.interface",
    "productName": "Matrix Closed Loop Maintenance",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "preload.js",
      "package.json",
      "db1.json",
      "db1Handler.js",
      "dbFaults.json",
      "dbFaultsHandler.js",
      "dbMaintenanceScenarios.json",
      "dbFaultScenarios.json",
      "fault-banner.js",
      "forcing-banner.js",
      "jquery.notification-banner.js",
      "main.css",
      "plc-details.css",
      "plc-details.html",
      "plc-controls.html",
      "worksheets.html",
      "worksheet.html",
      "settings.html",
      "student-portal.html",
      "teacher-dashboard.html",
      "hmi-interface.html",
      "scenario-popup.js",
      "pdf-popup.js",
      "assets/**/*",
      "docs/**/*",
      "dist/**/*",
      "LICENSE",
      "README.md"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hadefuwa",
        "repo": "closed-loop-maint"
      }
    ],
    "win": {
      "icon": "assets/icons/matrix-icon.ico"
    },
    "mac": {
      "icon": "assets/icons/matrix-icon.icns"
    },
    "linux": {
      "icon": "assets/icons/matrix-icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hadefuwa/closed-loop-maint.git"
  },
  "author": "Hamed Adefuwa",
  "license": "MIT",
  "dependencies": {
    "animejs": "^3.2.2",
    "chart.js": "^4.4.6",
    "datatables.net": "^2.1.8",
    "datatables.net-buttons": "^3.1.2",
    "electron-pdf-window": "^1.0.12",
    "html2canvas": "^1.4.1",
    "jquery": "^3.7.1",
    "nodes7": "^0.3.18",
    "pdfjs-dist": "^5.3.31"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.6.3",
    "webpack": "^5.x.x",
    "webpack-cli": "^4.x.x"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/hadefuwa/closed-loop-maint/issues"
  },
  "homepage": "https://github.com/hadefuwa/closed-loop-maint#readme"
}
